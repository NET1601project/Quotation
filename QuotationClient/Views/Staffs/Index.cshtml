@model IEnumerable<Domain.Staff>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Role)
            </th>
            <th>
                Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="listcustomer">
    </tbody>
</table>
@section scripts {
    <script>
        var token = localStorage.getItem('jwtToken')
        $(document).ready(function () {
            $.ajax({
                url: 'https://localhost:7222/odata/Staffs',
                type: 'GET',
                dataType: 'json',
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                success: function (data) {
                    displayCustomers(data);
                    console.log(data);
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error:', errorThrown);
                }
            });
        });
        function displayCustomers(data) {
            var tableHtml = '';
            data.forEach(function (customer) {
                tableHtml += '<tr>';
                tableHtml += '<td>' + customer.staffId + '</td>';
                tableHtml += '<td>' + customer.staffName + '</td>';
                tableHtml += '<td>' + customer.contact + '</td>';
                tableHtml += '<td>' + customer.createDate + '</td>';
                tableHtml += '<td>' + customer.account.accountID + '</td>';
                tableHtml += '<td>' + customer.account.username + '</td>';
                tableHtml += '<td>' + customer.account.password + '</td>';
                tableHtml += '<td>' + customer.account.role + '</td>';
                tableHtml += '<td><button class="btn btn-primary detail-btn" data-staff-id="' + customer.staffId + '">Detail</button></td>';

                tableHtml += '</tr>';
            });
            $('#listcustomer').html(tableHtml);
            $('.detail-btn').click(function () {
                var staffId = $(this).data('staff-id');

                $.ajax({
                    type: "GET",
                    url: "https://localhost:7222/api/Staffs/GetStaffById?staffId=" + staffId,
                    success: function (response) {
                        console.log(response);
                        window.location.href = '/Staffs/Details?staffId=' + staffId;

                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        }

    </script>
}