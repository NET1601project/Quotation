    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("loginForm").addEventListener("submit", function (event) {
                event.preventDefault();
                var email = document.getElementById('username').value;
                var password = document.getElementById('password').value;
                console.log(email, password)
                login();
            });
            function login() {
                var email = document.getElementById('username').value;
                var password = document.getElementById('password').value;
                if (email == "admin" && password == "admin") {
                    window.location.href = "/Home/HomePage";
                    localStorage.setItem('jwtToken', "ADMIN");
                }
                else {
                    var url = `https://localhost:7222/api/Accounts/Login?username=${email}&password=${password}`;
                    $.ajax({
                        type: 'POST',
                        url: url,
                        contentType: 'application/json;odata.metadata=minimal;odata.streaming=true',
                        success: function (response) {
                            $('#jwtToken').text('Token: ' + response.token);
                            localStorage.setItem('jwtToken', response.token);
                            localStorage.setItem('role',response.role)
                            console.log(response.role);
                            // alert(response.token);
                            window.location.href = "/Home/HomePage";


                        },
                        error: function (error) {
                            console.log(error.responseJSON);
                            alert(error.responseJSON.title);
                        }
                    });
                }
            }
        });
    </script>

